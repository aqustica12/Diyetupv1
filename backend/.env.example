# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/diyetup
DB_HOST=localhost
DB_PORT=5432
DB_NAME=diyetup
DB_USER=diyetup_user
DB_PASSWORD=your_strong_password

# JWT
JWT_SECRET=your_very_strong_jwt_secret_here_at_least_32_characters
JWT_EXPIRES_IN=7d

# Server
NODE_ENV=production
PORT=5000

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/diyetup/uploads

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com